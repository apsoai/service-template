{
  "name": "@apso/template",
  "private": true,
  "version": "1.0.0",
  "description": "Nest TypeScript starter repository",
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "compose": "./scripts/apso-compose.sh",
    "log": "./scripts/apso-log.sh",
    "provision": "./scripts/apso-provision.sh",
    "shutdown": "./scripts/apso-shutdown.sh",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "schema:sync": "ts-node ./src/sync.ts",
    "typeorm": "typeorm-ts-node-esm",
    "db:create": "npm run typeorm -- migration:create ./src/migrations/$npm_config_name",
    "db:generate": "npm run build && npm run typeorm -- migration:generate ./src/migrations/$npm_config_name -d ./dist/orm.config.js && npm run build",
    "db:migrate": "npm run typeorm -- migration:run -d ./dist/orm.config.js",
    "db:build-and-migrate": "npm run build && npm run db:run",
    "db:rollback": "npm run typeorm -- migration:revert -d ./dist/orm.config.js"
  },
  "dependencies": {
    "@apollo/server": "^4.10.1",
    "@nestjs-query/core": "^0.30.0",
    "@nestjs-query/query-graphql": "^0.30.0",
    "@nestjs-query/query-typeorm": "^0.30.0",
    "@nestjs/apollo": "^12.1.0",
    "@nestjs/common": "^9.3.8 || ^10.0.0",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^10.3.7",
    "@nestjs/graphql": "^12.1.1",
    "@nestjs/platform-express": "^10.3.7",
    "@nestjs/swagger": "^6.2.1",
    "@nestjs/typeorm": "^9.0.1",
    "@nestjsx/crud": "4.5.0",
    "@nestjsx/crud-request": "4.5.0",
    "@nestjsx/crud-typeorm": "4.5.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dataloader": "^2.2.2",
    "graphql": "^16.8.1",
    "graphql-scalars": "^1.23.0",
    "graphql-subscriptions": "^2.0.0",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20"
  },
  "peerDependencies": {
    "@nestjs/common": "^9.3.8 || ^10.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.2.0",
    "@nestjs/schematics": "^9.0.4",
    "@nestjs/testing": "^10.3.7",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.13.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^5.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
