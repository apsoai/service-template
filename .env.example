# Application Configuration
APP_PORT=3100                    # Port number for the application to listen on
APP_SITE=http://localhost       # Base URL for the application
APP_NAME=Apso Template         # Application name
ALLOWED_ORIGINS=localhost,localhost:3001  # Comma-separated list of allowed CORS origins

# Cookie Settings
COOKIE_HTTP_ONLY=false         # Whether the cookie is accessible only through HTTP
COOKIE_PATH=/local/auth/refresh_token  # Cookie path
COOKIE_DOMAIN=localhost        # Cookie domain
COOKIE_SAME_SITE=             # Cookie same-site policy (Strict, Lax, None)
COOKIE_SECURE=                # Whether the cookie requires HTTPS

# Logging
LOG_LEVEL=debug               # Logging level (debug, info, warn, error)

# Session Configuration
SESSION_KEY=aid               # Session key name
SESSION_SECRET=your-secret-here  # Session secret for encryption

# Database Configuration
DATABASE_TYPE=postgres        # Database type (postgres, mysql, etc.)
DATABASE_HOST=localhost       # Database host
DATABASE_PORT=54329          # Database port
DATABASE_USERNAME=apso       # Database username
DATABASE_NAME=apso          # Database name
DATABASE_PASSWORD=password   # Database password
DATABASE_SCHEMA=apso        # Database schema
DATABASE_SYNC=true          # Enable database schema sync (development only)
DATABASE_LOGGING=all        # Database query logging level

# Environment
ENV=local                   # Environment (local, development, staging, production)

# AWS Configuration
AWS_REGION=us-west-2       # AWS region for deployment 